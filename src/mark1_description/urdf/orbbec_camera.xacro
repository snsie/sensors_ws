        <parent link="camera_link"/>
        <child link="camera_imu_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> -->

    <!-- Camera IMU Optical Frame -->
    <!-- <link name="camera_imu_optical_frame"/> -->

    <!-- using real frames that hardware publishes-->
    <link name="camera_accel_gyro_optical_frame" />

    <joint name="camera_imu_optical_joint" type="fixed">
        <parent link="camera_link"/> <!-- removed extra link and added this directly to camera-->
        <!-- <child link="camera_imu_optical_frame"/> -->
        <child link="camera_accel_gyro_optical_frame" />
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <!-- this one is for camera IR-->
    <link name="camera_ir_optical_frame" />

    <joint name="camera_ir_optical_joint" type="fixed">
        <parent link="camera_link"/> 
        <!-- <child link="camera_imu_optical_frame"/> -->
        <child link="camera_ir_optical_frame" />
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <!-- Mount camera on pole -->
    <joint name="pole_camera_joint" type="fixed">
        <parent link="pole_link"/>
        <child link="camera_link"/>
        <origin xyz="0 0 ${pole_length/2}" rpy="0 0 0"/>
    </joint>

</robot>